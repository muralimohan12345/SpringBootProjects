<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- bean definitions here -->
     <bean id="airtel" class="com.example.Airtel">
      <!-- setter injection -->
      <property name="dataStrength" value="Airtel has good streangth"></property>
     </bean>
     
   <bean id="idea" class="com.example.Idea">
   <!-- constructor injection -->
     <constructor-arg name="dataStrength" value="Idea has less signal"></constructor-arg>
   </bean>
</beans>
    

